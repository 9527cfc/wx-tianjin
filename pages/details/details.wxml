
<!--pages/details/details.wxml-->
<view class="container box box-tb box-align-center">
  <view class="bigTitle">
    {{dataList.title}}
  </view>
  <view class="content">
   
      <block wx:for="{{dataList.content}}">
        <view class="textView" wx:if="{{item.con}}">
          {{item.con}}
        </view>
        <view wx:if="{{item.strong}}" class="bView" style="font-weight:800;">
          {{item.strong}}
        </view>
        <image class="anyImage" wx:if="{{item.image}}" src="{{item.image}}"></image>
      </block>
    
  </view>
</view>

