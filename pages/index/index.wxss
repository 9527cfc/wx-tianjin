html, body, page {
  width: 100%;
  height: 100%;
  font-size: 24rpx;
  background: #e8edf1;
}

.container {
  width: 100%;
  /*display: flex;*/
}

.banner {
  width: 100%;
  height: 400rpx;
}

.banner .bannerSwiper {
  width: 100%;
  height: 100%;
}

.banner .bannerSwiper swiper-item {
  width: 100%;
  height: 100%;
}

.banner .bannerSwiper swiper-item image {
  width: 100%;
  height: 100%;
}

.nav {
  height: 200rpx;
  width: 100%;
}

.navItem {
  height: 100%;
  width: 25%;
}

.navItem .navImg {
  padding-top: 10rpx;
  width: 100rpx;
  height: 100rpx;
}

.navItem .navText{
  text-align: center;
  font-size: 32rpx;
}

.headLine {
  width: 100%;
  height: 100rpx;
  background: #fff;
}

.headLine .headLineImg {
  width: 13%;
