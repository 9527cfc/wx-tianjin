.artisanBox {
  height: 580rpx;
  width: 100%;
  overflow: hidden;
}

.scroll-view_H {
  white-space: nowrap;
  display: flex;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.artisanWra {
  height: 580rpx;
  width: 90%;
}

.scroll-item {
  width: 700rpx;
  height: 500rpx;
  display: inline-block;
}

.artisanCon {
  width: 700rpx;
  height: 500rpx;
  background: #fff;
}

.artisanCon .artisanWord1 {
  width: 90%;
  height: 50rpx;
  line-height: 50rpx;
  overflow: hidden;
  padding-top: 10rpx;
  font-size: 30rpx;
}

.artisanCon .artisanWord2 {
  margin-top: 10rpx;
  width: 90%;
  height: 50rpx;
  line-height: 36rpx;
  font-size: 26rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #666;
}

.artisanCon .artisanImage {
  width: 86%;
